@model Garage_2._0.Models.StatsViewModel
@{
    ViewData["Title"] = "Statistics";
}
@*- antal fordon
- antal per typ (färg...)
- totalt antal hjul
- total intäkt av aktuella fordon
- Annat:
Vanligaste märke, färg...

*@

<h1><i class="fas fa-folder-open mr-2"></i>Statistik</h1>
<hr />
<div>
    <div class="row">
        <div class="col-sm">
            <dl class="row">
                <dt class="col-sm-8">Totalt antal fordon</dt>
                <dd class="col-sm-4"></dd>
                
                @foreach (var type in Model.AmountOfVehicleTypes)
                {
                    
                    <dt class="col-sm-8">@type.Key</dt>
                    <dd class="col-sm-4">@type.Value</dd>

                }
            </dl>
        </div>
   

        <div class="col-sm">
            <dl class="row">
                <dt class="col-sm-8">@Html.DisplayNameFor(model => model.TotalGeneratedIncome) (Intäkter)</dt>
                <dd class="col-sm-4">@Html.DisplayFor(model => model.TotalGeneratedIncome)</dd>

                <dt class="col-sm-8">@Html.DisplayNameFor(model => model.TotalWheels) (Totalt antal hjul)</dt>
                <dd class="col-sm-4">@Html.DisplayFor(model => model.TotalWheels)</dd>

                <dt class="col-sm-8">@Html.DisplayNameFor(model => model.MostCommonColor) (Vanligaste färgen)</dt>
                <dd class="col-sm-4">@Html.DisplayFor(model => model.MostCommonColor) (Vanligaste färgen)</dd>

                <dt class="col-sm-8">@Html.DisplayNameFor(model => model.OldestParkTime) (Längsta parkeringen)</dt>
                <dd class="col-sm-4">@Html.DisplayFor(model => model.OldestParkTime)</dd>
            </dl>
            <div>
                Senast Uppdaterat:
                <i>00:00:00 1 Jan 2020</i>
            </div>
        </div>
        
    </div>
</div>

<div>
    <a asp-action="GetOverviewModel">Tillbaka till översikt</a>
</div>
